<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:bottom="-1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="-1dp"
        android:scaleHeight="80%">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <padding
                android:left="4dp"
                android:top="1dp"
                android:right="4dp"
                android:bottom="1dp" />
        </shape>
    </item>

</layer-list>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent" />
            <stroke
                android:width="0.5dp"
                android:color="@color/metal" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent" />
            <stroke
                android:width="0.5dp"
                android:color="@color/metal" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/red" />
            <stroke
                android:width="0.5dp"
                android:color="@color/metal" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>

    </item>
</selector>
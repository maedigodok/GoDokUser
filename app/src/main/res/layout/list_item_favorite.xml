<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/custom_border_layout_allside"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:paddingBottom="20dp">

    <RelativeLayout
        android:id="@+id/lyt_maintop"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/default_green">

        <ImageView
            android:id="@+id/item_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:fitsSystemWindows="true"
            android:src="@drawable/iko_cantik1"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_below="@+id/lyt_maintop"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/lyt_mainleft"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/item_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="11dp"
                android:text="x November 2016"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/default_blue"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/calendar_blue"
                android:drawablePadding="5dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lyt_mainright"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="9dp">

            <TextView
                android:id="@+id/item_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="11dp"
                android:text="Dipos 11 jam yang lalu"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/default_blue"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:drawableLeft="@drawable/calendar_blue"
                android:drawablePadding="5dp"/>


        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/item_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="18dp"
        android:text="Insert new headline hereInsert new headline here"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/default_blue"
        android:layout_below="@+id/mainlayout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"/>

    </RelativeLayout>

</RelativeLayout>
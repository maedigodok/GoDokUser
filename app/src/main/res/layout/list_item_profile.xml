<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:singleLine="true"
        android:text="TITLE"
        android:textColor="@color/default_blue"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/item_textfield"
        android:hint="Isi field"
        android:textColorHint="@color/default_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_text"
        android:gravity="left"
        android:textColor="@color/default_blue"
        android:textSize="22dp"
        android:inputType="text"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:paddingBottom="6dp"
        android:visibility="visible"
        android:background="@drawable/custom_edittext_blue"/>

    <Spinner
        android:id="@+id/item_spinfield"
        style="@style/spinner_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Laki Laki"
        android:padding="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/item_text"
        android:textColor="@color/default_blue"
        android:visibility="gone"/>

    <Button
        android:id="@+id/item_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/custom_button"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:text="Perbaharui"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/item_textfield"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:visibility="gone"
        android:layout_alignEnd="@+id/item_textfield" />

</RelativeLayout>
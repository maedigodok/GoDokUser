<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="1dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <com.maedi.user.godok.v1.view.RoundRectangleImageView
                android:id="@+id/logo_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="logo_share"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_godok"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/about_version_text_size"
                android:textStyle="bold|italic"
                android:textColor="#133595"
                android:text="appName"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/logo_share"
                android:layout_alignLeft="@+id/logo_share"
                android:layout_marginLeft="0dp"/>

            <TextView
                android:id="@+id/package_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/about_version_text_size"
                android:textStyle="bold|italic"
                android:textColor="#133595"
                android:text="packageName"
                android:layout_below="@+id/app_name"
                android:layout_alignStart="@+id/app_name"
                android:layout_marginTop="12dp"
                android:visibility="gone"/>


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
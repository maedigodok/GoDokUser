<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/item_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="18dp"
        android:text="GIGISPESIALIS"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/default_blue"/>

    <RelativeLayout
        android:id="@+id/lyt_mainleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/item_text1">

        <RelativeLayout
            android:id="@+id/lyt_photodoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/circular_standart_photo">

            <com.maedi.user.godok.v1.view.CircleImageView
                android:id="@+id/item_image1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="putphoto"
                android:src="@drawable/iko_cantik1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lyt_mainright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="20dp"
        android:layout_alignBaseline="@+id/lyt_mainleft"
        android:layout_alignTop="@+id/lyt_mainleft"
        android:layout_toEndOf="@+id/lyt_mainleft">

        <TextView
            android:id="@+id/item_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="18dp"
            android:text="Dijawab oleh dr. Jolinda"
            android:textColor="@color/default_blue"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/item_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="14dp"
            android:text="x November 2016"
            android:textColor="@color/default_blue"
            android:layout_below="@+id/item_text2"
            android:layout_marginTop="2dp" />

        <RelativeLayout
            android:id="@+id/item_lyt_closechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_text3"
            android:paddingTop="2dp"
            android:paddingBottom="4dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_1">

            <TextView
                android:id="@+id/item_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="14dp"
                android:text="Percakapan ini telah ditutup"
                android:textColor="@color/white"
                android:layout_marginTop="2dp"/>

        </RelativeLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_blue"
        android:layout_below="@+id/lyt_mainright"
        android:layout_marginTop="20dp">
    </View>

</RelativeLayout>
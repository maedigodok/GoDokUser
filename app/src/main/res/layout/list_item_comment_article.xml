<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/lyt_mainleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@android:color/transparent">

            <com.maedi.user.godok.v1.view.CircleImageView
                android:id="@+id/item_image1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="putphoto"
                android:src="@drawable/iko_cantik1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lyt_mainright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/lyt_mainleft"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/lyt_mainleft">

        <TextView
            android:id="@+id/item_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="18dp"
            android:text="Malika"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/item_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:textSize="11dp"
            android:text="Laporkan"
            android:textColor="@color/default_blue"
            android:layout_alignBaseline="@+id/item_text1"
            android:layout_alignBottom="@+id/item_text1" />

        <TextView
            android:id="@+id/item_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_text2"
            android:layout_marginTop="2dp"
            android:layout_gravity="left"
            android:textSize="11dp"
            android:text="x November 2016"
            android:textColor="@color/default_blue"
            android:drawableLeft="@drawable/date_black"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/item_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:textSize="11dp"
            android:text="11.52 am"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/default_blue"
            android:drawableLeft="@drawable/time_black"
            android:drawablePadding="5dp"
            android:layout_alignBaseline="@+id/item_text3"
            android:layout_alignBottom="@+id/item_text3"/>

        <TextView
            android:id="@+id/item_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="14dp"
            android:text="Wah artikel nya bagus banget, diperbanyak lagi dong"
            android:textColor="@color/black"
            android:layout_below="@+id/item_text4"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/__mainlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_below="@+id/item_text5"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/item_text6"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_gravity="left"
                android:textSize="11dp"
                android:text="10 Suka"
                android:textColor="@color/default_blue"/>

            <TextView
                android:id="@+id/item_text7"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_gravity="center"
                android:textSize="11dp"
                android:text="0 Tidak Suka"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/default_blue"
                android:textAlignment="center"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/item_text8"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:textSize="11dp"
                android:text="Balas"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/default_blue"
                android:textAlignment="textEnd"
                tools:ignore="RtlCompat" />



        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
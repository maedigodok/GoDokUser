    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/linearLayout1"      
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/listmenuitemtext4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/news_leftmenu_text4_marginleft"
            android:layout_marginRight="@dimen/news_leftmenu_text4_marginright"
            android:layout_weight="1.0"
            android:ellipsize="none"
            android:singleLine="true"
            android:text="10 Suka"
            android:textColor="@color/news_leftmenu_text4"
            android:textSize="@dimen/news_leftmenu_text4" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/news_leftmenu_separatortext_margintop"
            android:layout_marginTop="@dimen/news_leftmenu_separatortext_margintop"
            android:background="@color/news_leftmenu_separatortext_bg" />

        <TextView
            android:id="@+id/listmenuitemtext5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/news_leftmenu_text5_marginleft"
            android:layout_weight="1.0"
            android:ellipsize="none"
            android:singleLine="true"
            android:text="40 Komentar"
            android:textColor="@color/news_leftmenu_text5"
            android:textSize="@dimen/news_leftmenu_text5" />

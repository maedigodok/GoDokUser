<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
    android:background="@drawable/border_layout_write_status" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/listmenuitemicon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:adjustViewBounds="true"
            android:contentDescription="@string/like_news"
            android:paddingLeft="@dimen/news_leftmenu_like_ic_paddingleft"
            android:paddingRight="@dimen/news_leftmenu_like_ic_paddingright"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_like" />
        <!--
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:adjustViewBounds="true"
            android:contentDescription="@string/separator_likecomment_news"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_separator_comment" />

        <ImageView
            android:id="@+id/listmenuitemicon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:adjustViewBounds="true"
            android:contentDescription="@string/comment_news"
            android:paddingLeft="@dimen/news_leftmenu_like_ic_paddingleft"
            android:paddingRight="@dimen/news_leftmenu_like_ic_paddingright"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_write_status" />
